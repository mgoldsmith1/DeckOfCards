# When you want to specify the files that can only be tested

[run]
source =
    app/
    tests/

# Let the system/travis understand the files to omit

omit =
    app/__init__.py
    tests/__init__.py
    app/models.py

# Showing report received
[report]
show_missing = True

# Exclude specific lines
exclude_lines =
    def __repr__
    def __init__